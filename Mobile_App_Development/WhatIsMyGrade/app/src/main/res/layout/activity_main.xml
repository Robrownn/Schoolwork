<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rob.whatismygrade.MainActivity">

    //Title
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:text="Enter Your Marks"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/titleView" />

    //Assignment Label
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Assignments(%)"
        android:id="@+id/assignmentView"
        android:layout_marginTop="65dp"
        android:layout_below="@+id/titleView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp" />

    //Calculate Button
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:id="@+id/calculate"
        android:layout_below="@+id/assignmentView"
        android:layout_alignRight="@+id/titleView"
        android:layout_alignEnd="@+id/titleView"
        android:layout_marginTop="101dp" />

    //Exam Label
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exams(%)"
        android:id="@+id/examsView"
        android:layout_below="@+id/assignmentView"
        android:layout_alignLeft="@+id/assignmentView"
        android:layout_alignStart="@+id/assignmentView"
        android:layout_marginTop="11dp" />

    //Assignment input box
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/assignmentEnter"
        android:hint="Assingment Marks"
        android:inputType="text"
        android:textSize="15sp"
        android:layout_alignBaseline="@+id/assignmentView"
        android:layout_alignBottom="@+id/assignmentView"
        android:layout_alignLeft="@+id/calculate"
        android:layout_alignStart="@+id/calculate" />

    //Exam Mark input box
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/examEnter"
        android:hint="Exam Marks"
        android:inputType="text"
        android:textSize="15sp"
        android:layout_below="@+id/assignmentView"
        android:layout_alignLeft="@+id/assignmentEnter"
        android:layout_alignStart="@+id/assignmentEnter" />

    //Final Mark


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/finalMark"
        android:text="Final Mark"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/calculate"
        android:layout_alignLeft="@+id/calculate"
        android:layout_alignStart="@+id/calculate" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLEAR "
        android:id="@+id/clear"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/finalMark"
        android:layout_alignLeft="@+id/examsView"
        android:layout_alignStart="@+id/examsView" />

</RelativeLayout>
